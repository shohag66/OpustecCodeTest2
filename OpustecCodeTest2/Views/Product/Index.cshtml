@model List<OpustecCodeTest2.Models.Product>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Product" class="btn btn-success">Create</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>ProductCode</td>
                    <td>ProductName</td>
                    <td>UnitPrice</td>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductCode</td>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice</td>
                        
                        <td>
                            <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
